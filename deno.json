{
    "tasks": {
        "deploy": "rscp static/* lsh.red:www/sunsim/",
        "dev": "deno run --watch main.ts",
        "fmt": "deno fmt",
        "test": "deno test -A --parallel",
        "lint": "deno lint",
        "checkall": "deno task fmt --check && deno task lint && deno task test",
        "bundle": "deno run -A bundle.ts"
    },
    "imports": {
        "@jspm/core": "npm:@jspm/core@^2.1.0",
        "@std/assert": "jsr:@std/assert@1",
        "geotiff": "npm:geotiff@^2.1.3",
        "suncalc": "npm:suncalc@^1.9.0"
    },
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "lint": {
        "rules": {
            "exclude": ["require-await", "ban-ts-comment"]
        }
    },
    "fmt": {
        "indentWidth": 4,
        "useTabs": false,
        "semiColons": false
    }
}
